<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rootLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/theme_blue">

    <!-- Header Components (Same as before) -->
    <TextView
        android:id="@+id/tvClanName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="LOADING..."
        android:textColor="@color/white"
        android:textSize="28sp"
        android:textStyle="bold"
        android:fontFamily="sans-serif-black"
        android:letterSpacing="0.05"
        android:shadowColor="#80000000"
        android:shadowDy="4"
        android:shadowRadius="8"
        android:layout_marginTop="40dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/tvPageTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="DASHBOARD"
        android:textColor="#B3FFFFFF"
        android:textSize="14sp"
        android:letterSpacing="0.2"
        android:layout_marginTop="4dp"
        app:layout_constraintTop_toBottomOf="@id/tvClanName"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- ViewPager -->
    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/viewPager"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginBottom="24dp"
        android:layout_marginTop="24dp"
        app:layout_constraintBottom_toTopOf="@id/tabDots"
        app:layout_constraintTop_toBottomOf="@id/tvPageTitle"
        tools:layout_editor_absoluteX="0dp" />

    <!-- Dots: Added marginTop to give it room from the list fade -->
    <com.google.android.material.tabs.TabLayout
        android:id="@+id/tabDots"
        android:layout_width="wrap_content"
        android:layout_height="16dp"
        android:background="@android:color/transparent"
        app:tabBackground="@drawable/selector_dot_dummy"
        app:tabIndicatorHeight="0dp"
        app:tabGravity="center"
        app:tabPaddingStart="8dp"
        app:tabPaddingEnd="8dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="12dp"
        app:layout_constraintBottom_toTopOf="@id/bottomBar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Bottom Bar -->
    <LinearLayout
        android:id="@+id/bottomBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:padding="16dp"
        android:background="@android:color/transparent"
        app:layout_constraintBottom_toBottomOf="parent">

        <TextView
            android:id="@+id/btnSettings"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="SETTINGS"
            android:textColor="#80FFFFFF"
            android:textStyle="bold"
            android:padding="12dp"/>

        <View android:layout_width="0dp" android:layout_height="1dp" android:layout_weight="1"/>

        <TextView
            android:id="@+id/btnRefresh"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="REFRESH DATA"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:background="@drawable/bg_glass_card"
            android:paddingHorizontal="24dp"
            android:paddingVertical="12dp"/>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>